			display : '<input type="checkbox" id="noOrgUserId">',
			name : 'ids',
			width : 30,
			align : 'center'
		}, {
			display : 'ID',
			name : 'id',
			metadata : 'id',
			hide : true,
			align : 'center'
		}, {
			display : '用户名',
			name : 'userid',
			metadata : 'userid',
