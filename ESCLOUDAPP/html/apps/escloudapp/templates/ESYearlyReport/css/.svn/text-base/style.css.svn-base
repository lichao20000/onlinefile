.coverinfo {
	margin-left:10%;
	margin-right:10%;
}
.coverinfo ul li{
	margin: 10px;
	position: relative;
	font-size: 15px;
	color: #3D3D3D;
	text-align: center;
}
.coverinfo .thead{
	font-size: 20px;
	font-weight: bold;
	color: #3D3D3D;
	margin-top:14px;
	margin-bottom: 20px;
	text-align: center;
}
.coverinfo .ttrail{
	font-weight: bold;
	margin: 20px 10% 0 10%;
	color: #3D3D3D;
}
.coverinfo span {
	width: 150px;
	display: inline-block;
	float: left;
}
.coverinfo input {
	width: 250px;
}
