<script
	type="text/javascript"
	src='<?php echo $tplPath?>/ESEMail/js/manageData.js'></script>
<link
	href='<?php echo $tplPath?>/ESEMail/css/email.css' rel="stylesheet" />

<div
	id="emailContainer" class="emailContainerCls">

	<div id="emailManageTitle" class="emailManageTitleCls">
		<img src="<?php echo $tplPath?>/ESEMail/img/emailLogo.png"
			class="emailLogoCls">
	</div>
	<div id="leftSection" class="leftSectionCls">
		<div id = "emailListsContainerForScro" class = "emailListsContainerForScro">
