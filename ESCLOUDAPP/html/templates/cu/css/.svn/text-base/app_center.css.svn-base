@charset "utf-8";
/* CSS Document */
.appCenterIcon {
	border:1px solid #ccc;
	padding:2px;
	float:left;
	background:#fff;
	height:48px;
	width:48px;
	margin-right:15px;
}
.appCenterIconImg {
	width:32px;
	height:32px;
	padding:8px;
	background:#f0f0f0;
}
.appCenterIconNum {
	height:12px;
	width:43px;
	background:#f0f0f0;
	text-align:right;
	padding-right:5px;
	line-height:12px;
}
.appCenterCart1 {
	height:23px;
	width:27px;
	margin:0 15px;
	float:left;
	display:inline;
	background:url(../images/cart_1.png);
	text-align:center;
	line-height:17px;
	color:#fff;
*_filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='../../../images/icons/cart_1.png');
*_ background-image:none;
}
.appCenterCart2 {
	height:23px;
	width:27px;
	margin:0 15px;
	float:left;
	display:inline;
	background:url(../images/cart_2.png);
	text-align:center;
	line-height:17px;
	color:#fff;
*_filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='../../../images/icons/cart_2.png');
*_ background-image:none;
}
.appCenterView {
	float:left;
	padding-top:3px;
}
.appCenterView img {
	margin-right:6px;
}
.appCenterView a {
	text-decoration:underline;
	color:#369;
}
.appCenterCartList {
	float:left;
	border:3px solid #f2f2f2;
	background:#f8f8f8;
	width:716px;
	padding:10px 40px;
}/*写好百分百JS后请把width:716px;去掉*/
.appCenterCartList ul {
	clear:both;
	overflow:hidden;
*_border-bottom:1px solid #f8f8f8;
}
.appCenterCartList li {
	float:left;
	border-bottom:1px dotted #d8d8d8;
	width:320px;
	margin-right:30px;
	line-height:28px;
}
.appCenterCartList li a {
	text-decoration:none;
	color:#369;
	float:left;
}
.appCenterCartList li span {
	padding-left:10px;
	float:left;
}
.appCenterCartList li span img {
	margin-top:4px;
}
